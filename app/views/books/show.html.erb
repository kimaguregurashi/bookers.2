<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3">
<%= render 'list', books: @books %>
</div>
<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table">
  <tbody>
    <tr>
      <td>
     <% if @book.image.attached? %>
     <%= image_tag @book.image, size: "100x100" %>
     <% else %>
     <%= image_tag 'default-image.jpg', size: "100x100" %>
     <% end %>
     <br><%= link_to @user.name, user_path(@user.id) %>
      </td>
    <td><%= link_to @book.title, book_path(@book.id) %></td>
    <td><%= @book.body %></td>
    <% if @book.user == current_user %>
    <td><button type="button" class="btn btn-success"><%= link_to 'Edit', edit_book_path(@book.id) %></button></td>
    <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => '本当に消しますか？' %></button></td>
    <% end %>
    </tr>
  </tbody>
</table>
  </div>
 </div>
</div>

