 
 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
     <%= render 'list', books: @books %>
    </div>     
     <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
      
      <% @books.each do |book| %>
      
       <tr>
        <td> 
          <%= link_to user_path(book.user_id) do %>
            <%= image_tag book.user.get_profile_image(50,50) %></td>
           <% end %>
        </td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
       </tr>
      <% end %>
      </table>
   </div>
  </div>
 </div>
